@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Web.Common.PublishedModels
@inherits UmbracoViewPage<BlockListItem>


@{
	var row = (ListOfButtons_With_Image)Model.Content;
	if (row == null) return;
	var listOfButtons = row.ListOfButtons.ToList();
}
<!-- Button type 3 Section 
	This section displays a list of buttons configured with a background image, and the link-->
<section
	class="elementor-section elementor-top-section elementor-element elementor-element-a31a189 elementor-section-boxed elementor-section-height-default elementor-section-height-default"
	data-id="a31a189" data-element_type="section"
	data-settings="{&quot;jet_parallax_layout_list&quot;:[{&quot;jet_parallax_layout_image&quot;:{&quot;url&quot;:&quot;&quot;,&quot;id&quot;:&quot;&quot;,&quot;size&quot;:&quot;&quot;},&quot;_id&quot;:&quot;e4ca677&quot;,&quot;jet_parallax_layout_image_tablet&quot;:{&quot;url&quot;:&quot;&quot;,&quot;id&quot;:&quot;&quot;,&quot;size&quot;:&quot;&quot;},&quot;jet_parallax_layout_image_mobile&quot;:{&quot;url&quot;:&quot;&quot;,&quot;id&quot;:&quot;&quot;,&quot;size&quot;:&quot;&quot;},&quot;jet_parallax_layout_speed&quot;:{&quot;unit&quot;:&quot;%&quot;,&quot;size&quot;:50,&quot;sizes&quot;:[]},&quot;jet_parallax_layout_type&quot;:&quot;scroll&quot;,&quot;jet_parallax_layout_direction&quot;:null,&quot;jet_parallax_layout_fx_direction&quot;:null,&quot;jet_parallax_layout_z_index&quot;:&quot;&quot;,&quot;jet_parallax_layout_bg_x&quot;:50,&quot;jet_parallax_layout_bg_x_tablet&quot;:&quot;&quot;,&quot;jet_parallax_layout_bg_x_mobile&quot;:&quot;&quot;,&quot;jet_parallax_layout_bg_y&quot;:50,&quot;jet_parallax_layout_bg_y_tablet&quot;:&quot;&quot;,&quot;jet_parallax_layout_bg_y_mobile&quot;:&quot;&quot;,&quot;jet_parallax_layout_bg_size&quot;:&quot;auto&quot;,&quot;jet_parallax_layout_bg_size_tablet&quot;:&quot;&quot;,&quot;jet_parallax_layout_bg_size_mobile&quot;:&quot;&quot;,&quot;jet_parallax_layout_animation_prop&quot;:&quot;transform&quot;,&quot;jet_parallax_layout_on&quot;:[&quot;desktop&quot;,&quot;tablet&quot;]}]}">
	<div class="elementor-container elementor-column-gap-default">
		<div class="elementor-column elementor-col-100 elementor-top-column elementor-element elementor-element-a560ebc"
			data-id="a560ebc" data-element_type="column">
			<div class="elementor-widget-wrap elementor-element-populated">
				<div class="elementor-element elementor-element-0f8bcfd elementor-widget elementor-widget-spacer"
					data-id="0f8bcfd" data-element_type="widget" data-widget_type="spacer.default">
					<div class="elementor-widget-container">
						<div class="elementor-spacer">
							<div class="elementor-spacer-inner"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<section id="buttonType3Section">

	@if (listOfButtons.Any())
	{
		@foreach (var element in listOfButtons)
		{
			
			// Loop through each element in the block lis
			var content = element.Content as IPublishedElement;
			// Access the image
			var buttonImageDesktop = content.Value<IPublishedContent>("imageDesktop");
			var buttonImageMobile = content.Value<IPublishedContent>("imageMobile");
			var padding = content.Value<int>("padding");
			var horizontalAlignment = content.Value<string>("horizontalAlignment");
			// Access the link
			var link = content.Value<Link>("link");
			// Convert horizontal alignment to valid flexbox values
			var alignment = horizontalAlignment switch
			{
				"Left" => "flex-start",
				"Center" => "center",
				"Right" => "flex-end",
				_ => "center"  // default value
			};
			//@(horizontalAlignment + ":")
			<div id="overlayButtonType3" style="align-items: @alignment; @(horizontalAlignment + ":" + padding + "%;")">
				<div id="button-ButtonType3">
					<div id="button-ButtonType3">
						<a href="@link.Url" target="@link.Target" id="btnButtonType3">
							<img src="@buttonImageDesktop.Url()" srcset="@buttonImageDesktop.Url(), @buttonImageMobile.Url()" />
						</a>
					</div>
				</div>
			</div>
		}
	}
</section>
