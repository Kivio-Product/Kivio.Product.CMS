@using Umbraco.Cms.Core.Models
@using Umbraco.Cms.Core.Models.Blocks
@using Umbraco.Cms.Web.Common.PublishedModels
@inherits UmbracoViewPage<BlockListItem>

@{
	var row = (BannerWithButtons)Model.Content;
	if (row == null) return;
	var listOfButtons = row.ListOfButtons.ToList();
}

<section class="banner">
	<picture>
		<source media="(max-width: 768px)" srcset="@row.ImageDesktop.Url()">
		<img src="@row.ImageMobile.Url()" alt="Banner Image" class="banner-img">
	</picture>
	<div class="overlay">
		<div class="button-group">
			@foreach (var element in listOfButtons)
					{
						// Loop through each element in the block list
						var content = element.Content as IPublishedElement;
						// Access the image
						var buttonImageDesktop = content.Value<IPublishedContent>("imageDesktop");
						var buttonImageMobile = content.Value<IPublishedContent>("imageMobile");
						// Access the link
						var link = content.Value<Link>("link");
						<div class="button-group">
							<a href="@link.Url" target="@link.Target" class="btn">
								<img src="@buttonImageDesktop.Url()"
									srcset="@buttonImageDesktop.Url(), @buttonImageMobile.Url()" /> </a>
						</div>
					}
		</div>
	</div>
</section>

<section>
	<div id="containerBanner2" class="containerBanner2">
		<picture>
			<source srcset="@row.ImageMobile.Url()" media="(max-width: 765px)">
			<img src="@row.ImageDesktop.Url()" alt="Flowers">
			<div class="centeredBanner2">
				<div class="">
					@foreach (var element in listOfButtons)
					{
						// Loop through each element in the block list
						var content = element.Content as IPublishedElement;
						// Access the image
						var buttonImageDesktop = content.Value<IPublishedContent>("imageDesktop");
						var buttonImageMobile = content.Value<IPublishedContent>("imageMobile");
						// Access the link
						var link = content.Value<Link>("link");
						<div class="button-group">
							<a href="@link.Url" target="@link.Target" class="btn">
								<img height="204" src="@buttonImageDesktop.Url()"
									srcset="@buttonImageDesktop.Url(), @buttonImageMobile.Url() 300w" /> </a>
						</div>
					}
				</div>
			</div>
		</picture>
	</div>
</section>



